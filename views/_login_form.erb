<FORM name="form1" METHOD="get" action="<%= request.path_info %>?">
  <INPUT TYPE="HIDDEN" NAME="chal" VALUE="<%= params['challenge'] %>">
  <INPUT TYPE="HIDDEN" NAME="uamip" VALUE="<%= params['uamip'] %>">
  <INPUT TYPE="HIDDEN" NAME="uamport" VALUE="<%= params['uamport'] %>">
  <INPUT TYPE="HIDDEN" NAME="userurl" VALUE="<%= params['userurl'] %>">
  <table>
    <tbody>
      <tr>
        <th scope="row">Login:</td>
        <td><input type="text" name="UserName" size="20" maxlength="255"></td>
      </tr>
      <tr>
        <th scope="row">Password:</td>
        <td><input type="password" name="Password" size="20" maxlength="255"></td>
      </tr>
    </tbody>
  </table>
  <div id="submit-container">
    <input type="submit" name="login" value="login"><% if signup_url =~ /\S/ %> OR <a href="<%= signup_url %>" target="_blank">Signup!</a><% end %>
  </div>
</form>
